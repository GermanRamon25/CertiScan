<Window x:Class="CertiScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertiScan"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Sistema de Búsqueda UIF" Height="450" Width="800">

    <Window.Resources>
        <sys:Boolean x:Key="ValorTrue">True</sys:Boolean>
        <sys:Boolean x:Key="ValorFalse">False</sys:Boolean>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Cargar PDF" Width="120" Command="{Binding CargarPdfCommand}"/>
            <TextBox Width="300" Margin="10,0" Text="{Binding TerminoBusqueda, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Buscar" Width="120" Command="{Binding BuscarCommand}"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding ResultadosBusqueda}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre del Archivo" DisplayMemberBinding="{Binding NombreArchivo}" Width="Auto"/>
                    <GridViewColumn Header="Fecha de Carga" DisplayMemberBinding="{Binding FechaCarga, StringFormat='dd/MM/yyyy HH:mm'}" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Generar Constancia Aprobatoria" Command="{Binding GenerarConstanciaCommand}" CommandParameter="{StaticResource ValorTrue}"/>
            <Button Content="Generar Constancia Denegada" Margin="10,0,0,0" Command="{Binding GenerarConstanciaCommand}" CommandParameter="{StaticResource ValorFalse}"/>
        </StackPanel>
    </Grid>
</Window>
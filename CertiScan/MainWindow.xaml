<Window x:Class="CertiScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertiScan"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="CertiScan | Sistema de Búsqueda UIF"
        Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Window.Resources>
        <sys:Boolean x:Key="ValorTrue">True</sys:Boolean>
        <sys:Boolean x:Key="ValorFalse">False</sys:Boolean>

        <SolidColorBrush x:Key="HeaderDark" Color="#213449"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2196F3"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#2E7D32"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#C62828"/>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#213449"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AprobatoriaStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SuccessGreen}"/>
        </Style>
        <Style x:Key="DenegadaStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorRed}"/>
        </Style>
        <Style x:Key="EliminarStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="White" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource HeaderDark}" Padding="15,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/CertiScan;component/Imagenes/CERTISCAN.LOGO.png" Height="40" Margin="0,0,15,0"/>
                    <TextBlock Text="CERTISCAN | " Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="SISTEMA DE BÚSQUEDA UIF" Foreground="#BBBBBB" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>

                <Grid HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ToggleButton x:Name="UserMenuButton" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border Background="Transparent" Padding="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="👤" Foreground="White" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding NombreUsuarioLogueado}" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                                        <TextBlock Text=" ▾" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <Popup x:Name="UserPopup" 
                           IsOpen="{Binding IsChecked, ElementName=UserMenuButton}" 
                           StaysOpen="False" 
                           Placement="Bottom" 
                           PlacementTarget="{Binding ElementName=UserMenuButton}" 
                           AllowsTransparency="True">
                        <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,5,0,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel Width="150">
                                <TextBlock Text="Sesión activa:" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="{Binding NombreUsuarioLogueado}" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Button Content="Cerrar Sesión" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="#D32F2F" 
                                        Click="LogoutButton_Click"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="15,15,15,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Cargar PDF" Width="120" Height="35" Style="{StaticResource ModernButtonStyle}" 
                        Command="{Binding CargarPdfCommand}"/>

                <TextBox Width="350" Margin="10,0" Style="{StaticResource ModernTextBox}" 
                         Text="{Binding TerminoBusqueda, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="Buscar" Width="100" Height="35" Style="{StaticResource ModernButtonStyle}" 
                        Background="{StaticResource PrimaryBlue}" Command="{Binding BuscarCommand}"/>

                <Button Content="Eliminar PDF" Width="120" Margin="15,0,0,0" Style="{StaticResource EliminarStyle}" 
                        Command="{Binding DeletePdfCommand}"/>

                <Button Content="Ver Historial" Width="120" Margin="15,0,0,0" Style="{StaticResource ModernButtonStyle}" 
                        Command="{Binding ShowHistoryCommand}"/>

                <Button Content="🔄" Width="40" Margin="15,0,0,0" Style="{StaticResource ModernButtonStyle}" 
                        Background="Transparent" Foreground="Black" FontSize="18" Command="{Binding RefreshCommand}"/>
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="2" Margin="15,0" ItemsSource="{Binding DocumentosMostrados}" 
                  SelectedItem="{Binding SelectedDocumento}" AutoGenerateColumns="False" 
                  IsReadOnly="True" Background="White" BorderBrush="#DDDDDD" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre del Archivo" Binding="{Binding NombreArchivo}" Width="*"/>
                <DataGridTextColumn Header="Fecha de Carga" Binding="{Binding FechaCarga, StringFormat='dd/MM/yyyy HH:mm'}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="3" Height="8" HorizontalAlignment="Stretch" Background="#E0E0E0" VerticalAlignment="Center"/>

        <RichTextBox Grid.Row="4" Margin="15,5" IsReadOnly="True" BorderBrush="#DDDDDD" 
                     local:RichTextBoxHelper.Document="{Binding ContenidoDocumento}" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,15">
            <Button Content="Generar Constancia Aprobatoria" Width="250" Height="45" Style="{StaticResource AprobatoriaStyle}" 
                    Margin="0,0,20,0" Command="{Binding GenerarConstanciaCommand}" 
                    CommandParameter="{StaticResource ValorTrue}" IsEnabled="{Binding IsAprobatoriaButtonEnabled}"/>

            <Button Content="Generar Constancia Denegada" Width="250" Height="45" Style="{StaticResource DenegadaStyle}" 
                    Command="{Binding GenerarConstanciaCommand}" 
                    CommandParameter="{StaticResource ValorFalse}" IsEnabled="{Binding IsDenegadaButtonEnabled}"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="CertiScan.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sw="clr-namespace:System.Windows;assembly=PresentationCore"  
        Title="Iniciar Sesión - CertiScan" 
        Height="550" Width="850"  
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        AllowsTransparency="True" 
        WindowStyle="None" >

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlack" Color="Black"/>
        <SolidColorBrush x:Key="SecondaryGray" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="AccentLightGray" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextLight" Color="White"/>
        <SolidColorBrush x:Key="ControlBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderHighlight" Color="#CCCCCC"/>

        <DropShadowEffect x:Key="WindowShadow" Color="#000000" Direction="270" ShadowDepth="5" BlurRadius="15" Opacity="0.1"/>

        <Style x:Key="InputStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,0,20"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlack}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordInputStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,0,30"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlack}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TogglePasswordStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <TextBlock x:Name="Icon" 
                                       Text="👁"  
                                       FontSize="16" 
                                       Foreground="{StaticResource SecondaryGray}" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Icon" Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
                                <Setter TargetName="Icon" Property="Text" Value="👁"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Icon" Property="Foreground" Value="{StaticResource SecondaryGray}"/>
                                <Setter TargetName="Icon" Property="Text" Value="👁‍🗨"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0A0A0A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryGray}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
                    <Setter Property="TextBlock.TextDecorations" Value="{x:Static sw:TextDecorations.Underline}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="{StaticResource AccentLightGray}" Effect="{StaticResource WindowShadow}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource PrimaryBlack}" CornerRadius="15,0,0,15">
                <StackPanel VerticalAlignment="Center" Margin="40">

                    <Image Source="/CertiScan;component/Imagenes/logo.png" 
                           Width="150" Height="150" 
                           Margin="0,0,0,20" 
                           HorizontalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <TextBlock Text="CertiScan" 
                               Foreground="{StaticResource TextLight}"
                               FontSize="40" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>

                    <TextBlock Text="NOTARÍA PÚBLICA No. 215" 
                               Foreground="{StaticResource SecondaryGray}"
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="50">

                <TextBlock Text="INICIAR SESIÓN" 
                           Foreground="{StaticResource PrimaryBlack}"
                           FontSize="30" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Accede a tu cuenta para continuar." 
                           Foreground="{StaticResource SecondaryGray}"
                           FontSize="14"
                           Margin="0,0,0,40"/>

                <TextBlock Text="Nombre de Usuario" 
                           Foreground="{StaticResource SecondaryGray}" 
                           Margin="2,0,0,0"
                           FontWeight="SemiBold"/>
                <TextBox x:Name="UsernameTextBox" Style="{StaticResource InputStyle}" />

                <TextBlock Text="Contraseña" 
                           Foreground="{StaticResource SecondaryGray}" 
                           Margin="2,0,0,0"
                           FontWeight="SemiBold"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordInputStyle}" Grid.Column="0" 
                                 Margin="0" Padding="12,10" BorderThickness="1"/>

                    <TextBox x:Name="VisiblePasswordBox" Style="{StaticResource InputStyle}" Grid.Column="0"
                             Margin="0" Padding="12,10" Visibility="Collapsed" TextChanged="VisiblePasswordBox_TextChanged"/>

                    <CheckBox x:Name="TogglePasswordCheckbox" 
                              Grid.Column="1" 
                              VerticalAlignment="Center" 
                              Margin="-40,0,10,0" 
                              Style="{StaticResource TogglePasswordStyle}" 
                              Checked="TogglePasswordCheckbox_Checked"
                              Unchecked="TogglePasswordCheckbox_Unchecked"
                              Cursor="Hand"/>
                </Grid>

                <Button Content="Iniciar Sesión" 
                        Click="LoginButton_Click" 
                        IsDefault="True" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0, 20, 0, 0"/>


                <Button Content="¿Necesitas una cuenta? Regístrate aquí." 
                        Click="RegisterButton_Click"
                        Style="{StaticResource LinkButtonStyle}"/>

                <TextBlock x:Name="ErrorMessage" 
                           Foreground="Red" 
                           Margin="0,10,0,0" 
                           TextAlignment="Center" 
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
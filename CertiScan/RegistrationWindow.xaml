<Window x:Class="CertiScan.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sw="clr-namespace:System.Windows;assembly=PresentationCore"
        Title="Registro de Nuevo Usuario - CertiScan"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="520" Height="680" 
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlack" Color="#213449"/>
        <SolidColorBrush x:Key="SecondaryGray" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="AccentLightGray" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextLight" Color="White"/>
        <SolidColorBrush x:Key="ControlBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderHighlight" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#4A90E2"/>

        <DropShadowEffect x:Key="CardShadow" Color="#000000" Direction="270" ShadowDepth="5" BlurRadius="15" Opacity="0.3"/>

        <Style x:Key="InputStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,0,20"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordInputStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,0,20"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TogglePasswordStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <TextBlock x:Name="Icon" Text="👁" FontSize="16" Foreground="{StaticResource TextLight}" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RegisterButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource TextLight}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBlack}" 
            CornerRadius="20" 
            Effect="{StaticResource CardShadow}"
            Margin="15">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin="20">

            <TextBlock Text="REGISTRO DE USUARIO"
                       Foreground="{StaticResource TextLight}"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <TextBlock Text="Nombre Completo:" Foreground="{StaticResource TextLight}" FontSize="14" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox x:Name="FullNameTextBox" Style="{StaticResource InputStyle}" Margin="0,0,0,15"/>

            <TextBlock Text="Nombre de Usuario:" Foreground="{StaticResource TextLight}" FontSize="14" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameTextBox" Style="{StaticResource InputStyle}" Margin="0,0,0,15"/>

            <TextBlock Text="Contraseña:" Foreground="{StaticResource TextLight}" FontSize="14" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordInputStyle}" Grid.Column="0" Margin="0"/>
                <TextBox x:Name="VisiblePasswordBox" Style="{StaticResource InputStyle}" Grid.Column="0" Margin="0" Visibility="Collapsed"/>
                <CheckBox x:Name="TogglePasswordCheckbox" Grid.Column="1" Style="{StaticResource TogglePasswordStyle}" Margin="-35,0,0,0" Checked="TogglePasswordCheckbox_Checked" Unchecked="TogglePasswordCheckbox_Unchecked" Cursor="Hand"/>
            </Grid>

            <TextBlock Text="Confirmar Contraseña:" Foreground="{StaticResource TextLight}" FontSize="14" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource PasswordInputStyle}" Grid.Column="0" Margin="0"/>
                <TextBox x:Name="VisibleConfirmPasswordBox" Style="{StaticResource InputStyle}" Grid.Column="0" Margin="0" Visibility="Collapsed"/>
                <CheckBox x:Name="ToggleConfirmPasswordCheckbox" Grid.Column="1" Style="{StaticResource TogglePasswordStyle}" Margin="-35,0,0,0" Checked="ToggleConfirmPasswordCheckbox_Checked" Unchecked="ToggleConfirmPasswordCheckbox_Unchecked" Cursor="Hand"/>
            </Grid>

            <Button Content="Registrar" Click="RegisterButton_Click" Style="{StaticResource RegisterButtonStyle}" Height="40"/>

            <Button Content="Volver al Login" Click="BackToLogin_Click" Height="35" Background="Transparent" Foreground="#82B1FF" BorderBrush="Transparent" Cursor="Hand" Margin="0,10,0,0"/>

            <TextBlock x:Name="ErrorMessage" Foreground="#FF5252" TextAlignment="Center" FontSize="12" TextWrapping="Wrap" Margin="0,15,0,0"/>
        </StackPanel>
    </Border>
</Window>
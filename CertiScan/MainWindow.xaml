<Window x:Class="CertiScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertiScan"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="CertiScan | Sistema de Búsqueda UIF"
        Height="650" Width="1058"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RefreshButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Refrescar Vista"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <Image Source="/CertiScan;component/Imagenes/refresh_icon.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="PrimaryBlack" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryGray" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="AccentLightGray" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="ControlBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderHighlight" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#C0392B"/>
        <sys:Boolean x:Key="ValorTrue">True</sys:Boolean>
        <sys:Boolean x:Key="ValorFalse">False</sys:Boolean>

        <Style x:Key="UserMenuToggleStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border Background="{TemplateBinding Background}" Padding="8,5" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PopupBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="10" Color="#88000000" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MainActionButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Foreground" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0A0A0A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource MainActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#922B21"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#78221A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SearchTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlack}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSearchResult}" Value="True">
                    <Setter Property="Background" Value="#FFF7E1"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type RichTextBox}">
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

    </Window.Resources>

    <Grid Margin="15" Background="{StaticResource AccentLightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="Cargar PDF" Width="130" Command="{Binding CargarPdfCommand}" Style="{StaticResource MainActionButtonStyle}"/>
                <TextBox Width="350" Text="{Binding TerminoBusqueda, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SearchTextBoxStyle}"/>
                <Button Content="Buscar" Width="100" Command="{Binding BuscarCommand}" Style="{StaticResource MainActionButtonStyle}"/>
                <Button Content="Eliminar PDF" Width="130" Margin="15,0,0,0" Command="{Binding DeletePdfCommand}" Style="{StaticResource DeleteButtonStyle}"/>
                <Button Content="Ver Historial" Width="130" Margin="15,0,0,0" Command="{Binding ShowHistoryCommand}" Style="{StaticResource MainActionButtonStyle}"/>

                <Button Style="{StaticResource RefreshButtonStyle}"
                        Margin="15,0,0,0"
                        Command="{Binding RefreshCommand}" Height="36" Width="50"/>
            </StackPanel>

            <Grid Grid.Column="1" VerticalAlignment="Top">

                <ToggleButton x:Name="UserMenuButton" Style="{StaticResource UserMenuToggleStyle}">
                    <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.548,0.593">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding NombreUsuarioLogueado}" VerticalAlignment="Center" />
                    </StackPanel>
                </ToggleButton>

                <Popup x:Name="UserPopup"
                       IsOpen="{Binding IsChecked, ElementName=UserMenuButton}"
                       StaysOpen="False"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=UserMenuButton}"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Margin="0,5,0,0">

                    <Border Style="{StaticResource PopupBorderStyle}">
                        <StackPanel Width="200">
                            <TextBlock Text="Nombre:" Foreground="{StaticResource SecondaryGray}" FontSize="12"/>

                            <TextBlock Text="{Binding NombreUsuarioLogueado}"
                                       Foreground="Black"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,15"/>

                            <Button Content="Salir"
                                    Style="{StaticResource MainActionButtonStyle}"
                                    Click="LogoutButton_Click"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Grid>
        <DataGrid Grid.Row="1" ItemsSource="{Binding DocumentosMostrados}" SelectedItem="{Binding SelectedDocumento}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre del Archivo" Binding="{Binding NombreArchivo}" Width="*"/>
                <DataGridTextColumn Header="Fecha de Carga" Binding="{Binding FechaCarga, StringFormat='dd/MM/yyyy HH:mm'}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="2" Height="8" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="{StaticResource SecondaryGray}"/>

        <RichTextBox Grid.Row="3" local:RichTextBoxHelper.Document="{Binding ContenidoDocumento}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0" Style="{StaticResource {x:Type RichTextBox}}"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
            <Button Content="Generar Constancia Aprobatoria" Width="220" Command="{Binding GenerarConstanciaCommand}" CommandParameter="{StaticResource ValorTrue}" Style="{StaticResource MainActionButtonStyle}" IsEnabled="{Binding IsAprobatoriaButtonEnabled}"/>
            <Button Content="Generar Constancia Denegada" Width="228" Margin="20,0,0,0" Command="{Binding GenerarConstanciaCommand}" CommandParameter="{StaticResource ValorFalse}" Style="{StaticResource MainActionButtonStyle}" Height="45" IsEnabled="{Binding IsDenegadaButtonEnabled}"/>
        </StackPanel>

    </Grid>
</Window>
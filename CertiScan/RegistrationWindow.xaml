<Window x:Class="CertiScan.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Nuevo Usuario - CertiScan"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="500" Height="600"
        Background="Black">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" >

            <!-- Título -->
            <TextBlock Text="🧾 Registro de Usuario"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Nombre Completo -->
            <TextBlock Text="Nombre Completo:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox"
                     Height="35"
                     Background="#181818"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Padding="5"
                     Margin="0,0,0,15"/>

            <!-- Nombre de Usuario -->
            <TextBlock Text="Nombre de Usuario:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox"
                     Height="35"
                     Background="#181818"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Padding="5"
                     Margin="0,0,0,15"/>

            <!-- Contraseña -->
            <TextBlock Text="Contraseña:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordInput"
                         Height="35"
                         Background="#181818"
                         Foreground="White"
                         BorderBrush="White"
                         BorderThickness="1"
                         Padding="5"
                         Margin="0,0,0,15"/>

            <!-- Confirmar Contraseña -->
            <TextBlock Text="Confirmar Contraseña:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordInput"
                         Height="35"
                         Background="#181818"
                         Foreground="White"
                         BorderBrush="White"
                         BorderThickness="1"
                         Padding="5"
                         Margin="0,0,0,25"/>

            <!-- Botón Registrar -->
            <Button Content="Registrar"
                    Click="RegisterButton_Click"
                    Height="40"
                    Background="#4A90E2"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>

            <!-- Botón Volver al Login -->
            <Button Content="Volver al Login"
                    Click="BackToLogin_Click"
                    Height="35"
                    Background="Transparent"
                    Foreground="#4A90E2"
                    BorderBrush="Transparent"
                    Cursor="Hand"/>

            <!-- Mensaje de error -->
            <TextBlock x:Name="ErrorMessage"
                       Foreground="Red"
                       TextAlignment="Center"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

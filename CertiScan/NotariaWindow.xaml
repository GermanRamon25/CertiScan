<Window x:Class="CertiScan.NotariaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Datos de la Notaría" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Nombre del Notario:" Margin="0,5"/>
        <TextBox x:Name="txtNombre" Height="30" Margin="0,0,0,10"/>

        <TextBlock Text="Número de Notaría:" Margin="0,5"/>
        <TextBox x:Name="txtNumero" Height="30" Margin="0,0,0,10"/>

        <TextBlock Text="Dirección:" Margin="0,5"/>
        <TextBox x:Name="txtDireccion" Height="30" Margin="0,0,0,10"/>

        <TextBlock Text="Teléfono:" Margin="0,5"/>
        <TextBox x:Name="txtTelefono" Height="30" Margin="0,0,0,10"/>

        <TextBlock Text="Email de Contacto:" Margin="0,5"/>
        <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,20"/>

        <Button Content="Guardar y Sincronizar" Click="Guardar_Click" Height="40" Background="#213449" Foreground="White"/>
    </StackPanel>
</Window>
<Window x:Class="CertiScan.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sw="clr-namespace:System.Windows;assembly=PresentationCore"
        Title="Historial de Búsquedas" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlack" Color="#213449"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F4F7F9"/>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGridRow}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RegenerateButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#213449"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundGray}" CornerRadius="15" Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" Opacity="0.3" ShadowDepth="2"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PrimaryBlack}" CornerRadius="15,15,0,0" Padding="20">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="HISTORIAL DE BÚSQUEDAS" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" Foreground="White" Background="Transparent" 
                            BorderThickness="0" FontSize="18" Cursor="Hand" Click="Cerrar_Click"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <DataGrid ItemsSource="{Binding Historial}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionUnit="FullRow" 
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          Background="White"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha y Hora" Binding="{Binding FechaBusqueda, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                        <DataGridTextColumn Header="Usuario" Binding="{Binding NombreUsuario}" Width="120"/>
                        <DataGridTextColumn Header="Término" Binding="{Binding TerminoBuscado}" Width="*"/>

                        <DataGridTemplateColumn Header="Resultado" Width="115">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border x:Name="ResultBorder" CornerRadius="4" Margin="5" Padding="5,2" HorizontalAlignment="Left">
                                        <TextBlock x:Name="ResultText" Text="{Binding ResultadoTexto}" FontWeight="Bold" FontSize="10"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding ResultadoEncontrado}" Value="True">
                                            <Setter TargetName="ResultBorder" Property="Background" Value="#FFEBEE"/>
                                            <Setter TargetName="ResultText" Property="Foreground" Value="#C62828"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ResultadoEncontrado}" Value="False">
                                            <Setter TargetName="ResultBorder" Property="Background" Value="#E8F5E9"/>
                                            <Setter TargetName="ResultText" Property="Foreground" Value="#2E7D32"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Acción" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Regenerar PDF" Style="{StaticResource RegenerateButtonStyle}"
                                            Command="{Binding DataContext.RegenerateCertificateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Window>
<Window x:Class="CertiScan.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión - CertiScan"
        Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- 🎨 Colores base -->
        <SolidColorBrush x:Key="PrimaryBlack" Color="#181818"/>
        <SolidColorBrush x:Key="SecondaryGray" Color="#666666"/>
        <SolidColorBrush x:Key="AccentLightGray" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextLight" Color="White"/>
        <SolidColorBrush x:Key="ControlBackground" Color="White"/>

        <!-- 📝 Estilo para TextBox -->
        <Style x:Key="InputStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentLightGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlack}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🔒 Estilo para PasswordBox -->
        <Style x:Key="PasswordInputStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,20"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentLightGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlack}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🖱️ Estilo para botón principal -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🔗 Estilo para botones tipo enlace -->
        <Style x:Key="LinkButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryGray}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- 🪟 Contenedor principal -->
    <Border CornerRadius="15" Background="{StaticResource AccentLightGray}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel izquierdo -->
            <Border Grid.Column="0" Background="{StaticResource PrimaryBlack}" CornerRadius="15,0,0,15">
                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="CertiScan"
                               Foreground="{StaticResource TextLight}"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,50"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="¡Bienvenido de Nuevo!"
                               Foreground="{StaticResource TextLight}"
                               FontSize="30"
                               FontWeight="ExtraBold"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>

                    <TextBlock Text="Sistema de Gestión Notarial."
                               Foreground="{StaticResource SecondaryGray}"
                               FontSize="14"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Panel derecho -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="40,20,40,20">
                <TextBlock Text="INICIAR SESIÓN"
                           Foreground="{StaticResource PrimaryBlack}"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Accede a tu cuenta para continuar."
                           Foreground="{StaticResource SecondaryGray}"
                           FontSize="12"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Nombre de Usuario"
                           Foreground="{StaticResource SecondaryGray}"
                           Margin="2,0,0,0"
                           FontWeight="SemiBold"/>
                <TextBox x:Name="UsernameTextBox" Style="{StaticResource InputStyle}" />

                <TextBlock Text="Contraseña"
                           Foreground="{StaticResource SecondaryGray}"
                           Margin="2,0,0,0"
                           FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordInput" Style="{StaticResource PasswordInputStyle}" />

                <Button Content="Iniciar Sesión"
                        Click="LoginButton_Click"
                        IsDefault="True"
                        Style="{StaticResource PrimaryButtonStyle}"/>

                <Button Content="¿Necesitas una cuenta? Regístrate aquí."
                        Click="RegisterButton_Click"
                        Style="{StaticResource LinkButtonStyle}"/>

                <TextBlock x:Name="ErrorMessage"
                           Foreground="Red"
                           Margin="0,10,0,0"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

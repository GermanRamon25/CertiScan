<Window x:Class="CertiScan.NotariaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CertiScan - Configuración de Notaría" 
        Height="590" Width="550" 
        WindowStartupLocation="CenterScreen"
        Background="#F4F7F9"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#213449" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Datos de la Notaría" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20,30,20">

                <TextBlock Text="Nombre del Notario" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNombre" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

                <TextBlock Text="Número de Notaría" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNumero" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

                <TextBlock Text="Dirección Completa" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDireccion" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

                <TextBlock Text="Teléfono (10 dígitos)" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTelefono" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0" MaxLength="10"/>

                <TextBlock Text="Email de Contacto" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,25" Padding="5,0"/>

                <Button Content="GUARDAR Y SINCRONIZAR" 
                        Click="Guardar_Click" 
                        Height="45" 
                        Background="#213449" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Cancelar" 
                        Click="Cancelar_Click"
                        Background="Transparent" 
                        Foreground="#666" 
                        BorderThickness="0" 
                        Margin="0,10,0,0"
                        Cursor="Hand"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
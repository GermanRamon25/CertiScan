<Window x:Class="CertiScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertiScan"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="CertiScan | Sistema de Búsqueda UIF" 
        Height="650" Width="900" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlack" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryGray" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="AccentLightGray" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="ControlBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderHighlight" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#C0392B"/>

        <sys:Boolean x:Key="ValorTrue">True</sys:Boolean>
        <sys:Boolean x:Key="ValorFalse">False</sys:Boolean>

        <Style x:Key="MainActionButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Foreground" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0A0A0A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource MainActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#922B21"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#78221A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SecondaryGray}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlack}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSearchResult}" Value="True">
                    <Setter Property="Background" Value="#FFF7E1"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type RichTextBox}">
            <Setter Property="BorderBrush" Value="{StaticResource BorderHighlight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlack}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

    </Window.Resources>

    <Grid Margin="15" Background="{StaticResource AccentLightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">

            <Button Content="Cargar PDF" Width="130" Command="{Binding CargarPdfCommand}" 
                    Style="{StaticResource MainActionButtonStyle}"/>

            <TextBox Width="350" Text="{Binding TerminoBusqueda, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource SearchTextBoxStyle}"/>

            <Button Content="Buscar" Width="100" Command="{Binding BuscarCommand}"
                    Style="{StaticResource MainActionButtonStyle}"/>

            <Button Content="Eliminar PDF" Width="130" Margin="15,0,0,0" 
                    Command="{Binding DeletePdfCommand}" 
                    Style="{StaticResource DeleteButtonStyle}"/>

            <Button Content="Ver Historial" Width="130" Margin="15,0,0,0" 
                    Command="{Binding ShowHistoryCommand}"
                    Style="{StaticResource MainActionButtonStyle}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding DocumentosMostrados}"
                  SelectedItem="{Binding SelectedDocumento}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre del Archivo" Binding="{Binding NombreArchivo}" Width="*"/>
                <DataGridTextColumn Header="Fecha de Carga" Binding="{Binding FechaCarga, StringFormat='dd/MM/yyyy HH:mm'}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="2" Height="8" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="{StaticResource SecondaryGray}"/>

        <RichTextBox Grid.Row="3" 
                     local:RichTextBoxHelper.Document="{Binding ContenidoDocumento}"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,8,0,0"
                     Style="{StaticResource {x:Type RichTextBox}}"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">

            <Button Content="Generar Constancia Aprobatoria" Width="220"
                    Command="{Binding GenerarConstanciaCommand}" 
                    CommandParameter="{StaticResource ValorTrue}"
                    Style="{StaticResource MainActionButtonStyle}"
                    IsEnabled="{Binding IsAprobatoriaButtonEnabled}"/>
            <Button Content="Generar Constancia Denegada" Width="228"
                    Margin="20,0,0,0" 
                    Command="{Binding GenerarConstanciaCommand}" 
                    CommandParameter="{StaticResource ValorFalse}"
                    Style="{StaticResource MainActionButtonStyle}" 
                    Height="45"
                    IsEnabled="{Binding IsDenegadaButtonEnabled}"/>
        </StackPanel>
    </Grid>
</Window>
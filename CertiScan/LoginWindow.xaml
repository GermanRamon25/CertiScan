<Window x:Class="CertiScan.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión - CertiScan" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Nombre de Usuario:" />
            <TextBox Name="UsernameTextBox" Margin="0,5,0,15" />

            <TextBlock Text="Contraseña:" />
            <PasswordBox Name="PasswordBox" Margin="0,5,0,20" />

            <Button Content="Iniciar Sesión" Click="LoginButton_Click" IsDefault="True" />

            <Button Content="Registrar Nuevo Usuario" Margin="0,10,0,0" Click="RegisterButton_Click" Background="Transparent" BorderThickness="0" Cursor="Hand" Foreground="Blue"/>

            <TextBlock Name="ErrorMessage" Foreground="Red" Margin="0,10,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
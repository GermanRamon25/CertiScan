<Window x:Class="CertiScan.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Nuevo Usuario" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Nombre Completo:" />
            <TextBox Name="FullNameTextBox" Margin="0,5,0,15" />

            <TextBlock Text="Nombre de Usuario:" />
            <TextBox Name="UsernameTextBox" Margin="0,5,0,15" />

            <TextBlock Text="Contraseña:" />
            <PasswordBox Name="PasswordBox" Margin="0,5,0,15" />

            <TextBlock Text="Confirmar Contraseña:" />
            <PasswordBox Name="ConfirmPasswordBox" Margin="0,5,0,20" />

            <Button Content="Registrar" Click="RegisterButton_Click" IsDefault="True"/>
            <TextBlock Name="ErrorMessage" Foreground="Red" Margin="0,10,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>